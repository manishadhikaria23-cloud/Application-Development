@namespace JournalApp.Components.Pages.Journal
@page "/export"

<div class="page-container">
    <div class="export-card">
        <div class="card-header">
            <a href="/entries" class="back-button">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="m15 18-6-6 6-6" /></svg>
            </a>
            <div class="header-content">
                <h1>Export Journals</h1>
                <p>Create a formatted PDF of your entries</p>
            </div>
        </div>

        <div class="card-body">
            <div class="input-section">
                <label>Date Range</label>
                <div class="date-row">
                    <div class="input-group">
                        <span class="icon">📅</span>
                        <input type="date" @bind="FromDate" />
                    </div>
                    <div class="input-group">
                        <span class="icon">📅</span>
                        <input type="date" @bind="ToDate" />
                    </div>
                </div>
            </div>

            <div class="input-section">
                <label>File Name</label>
                <div class="input-group full">
                    <span class="icon">📄</span>
                    <input type="text" @bind="FileName" placeholder="my_journal_export" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="status-box @(ExportedPath != null ? "success" : "info")">
                    <div class="status-icon">
                        @(ExportedPath != null ? "✅" : "ℹ️")
                    </div>
                    <div class="status-text">
                        <span class="msg">@Message</span>
                        @if (ExportedPath != null)
                        {
                            <span class="path">@ExportedPath</span>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="card-footer">
            <button class="export-button @(IsProcessing ? "loading" : "")"
                    @onclick="ExportAsync"
                    disabled="@IsProcessing">
                @if (IsProcessing)
                {
                    <div class="spinner"></div>
                    <span>Generating PDF...</span>
                }
                else
                {
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" /><polyline points="7 10 12 15 17 10" /><line x1="12" y1="15" x2="12" y2="3" /></svg>
                    <span>Export Journal</span>
                }
            </button>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #2563eb;
        --primary-hover: #1d4ed8;
        --surface: #ffffff;
        --text: #1e293b;
        --text-light: #64748b;
        --border: #e2e8f0;
        --radius: 16px;
    }

    .page-container {
        display: flex;
        justify-content: center;
        padding: 40px 20px;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .export-card {
        width: 100%;
        max-width: 480px;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 24px;
        box-shadow: 0 20px 25px -5px rgba(0,0,0,0.05), 0 10px 10px -5px rgba(0,0,0,0.02);
        overflow: hidden;
    }

    .card-header {
        padding: 32px;
        display: flex;
        align-items: center;
        gap: 20px;
        border-bottom: 1px solid var(--border);
    }

    .back-button {
        width: 40px;
        height: 40px;
        display: grid;
        place-items: center;
        border-radius: 12px;
        background: #f8fafc;
        color: var(--text);
        text-decoration: none;
        transition: all 0.2s;
    }

        .back-button:hover {
            background: #f1f5f9;
            color: var(--primary);
        }

    .header-content h1 {
        font-size: 1.25rem;
        margin: 0;
        font-weight: 700;
        color: var(--text);
    }

    .header-content p {
        font-size: 0.875rem;
        margin: 4px 0 0;
        color: var(--text-light);
    }

    .card-body {
        padding: 32px;
    }

    .input-section {
        margin-bottom: 24px;
    }

        .input-section label {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            color: var(--text-light);
            display: block;
            margin-bottom: 8px;
        }

    .date-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }

    .input-group {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-group .icon {
            position: absolute;
            left: 12px;
            font-size: 14px;
            opacity: 0.5;
        }

        .input-group input {
            width: 100%;
            padding: 12px 12px 12px 40px;
            border-radius: 12px;
            border: 1.5px solid var(--border);
            font-size: 0.95rem;
            transition: all 0.2s;
        }

            .input-group input:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(37,99,235,0.1);
            }

    .status-box {
        margin-top: 24px;
        padding: 16px;
        border-radius: 12px;
        display: flex;
        gap: 12px;
        font-size: 0.9rem;
    }

        .status-box.info {
            background: #eff6ff;
            color: #1e40af;
            border: 1px solid #dbeafe;
        }

        .status-box.success {
            background: #f0fdf4;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

    .status-text {
        display: flex;
        flex-direction: column;
    }

        .status-text .path {
            font-family: monospace;
            font-size: 0.75rem;
            opacity: 0.8;
            margin-top: 4px;
            word-break: break-all;
        }

    .card-footer {
        padding: 0 32px 32px;
    }

    .export-button {
        width: 100%;
        background: var(--primary);
        color: white;
        border: none;
        padding: 16px;
        border-radius: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .export-button:hover:not(:disabled) {
            background: var(--primary-hover);
            transform: translateY(-1px);
        }

        .export-button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    .spinner {
        width: 20px;
        height: 20px;
        border: 2.5px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to

    {
        transform: rotate(360deg);
    }

    }
</style>