@namespace JournalApp.Components.Pages.Journal
@page "/view/{Date}"

<div class="view">
    <div class="view-top">
        <div class="links">
            <a class="back-link" href="/calendar">← Back to Calendar</a>
            <span class="sep">•</span>
            <a class="back-link" href="/entries">Back to Entries</a>
        </div>

        <div class="head">
            <div>
                <h2 class="title">View Entry</h2>
                <p class="subtitle">Entry details and full content.</p>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Message))
    {
        <div class="message">
            @Message
        </div>
    }
    else if (Entry != null)
    {
        <div class="card">
            <div class="meta-grid">
                <div class="meta">
                    <div class="meta-label">Date</div>
                    <div class="meta-value mono">@Entry.EntryDate.ToString("yyyy-MM-dd")</div>
                </div>

                <div class="meta">
                    <div class="meta-label">Title</div>
                    <div class="meta-value">@Entry.Title</div>
                </div>

                <div class="meta">
                    <div class="meta-label">Category</div>
                    <div class="meta-value">@Entry.Category</div>
                </div>

                <div class="meta">
                    <div class="meta-label">Primary Mood</div>
                    <div class="meta-value">
                        <span class="pill">@Entry.PrimaryMood</span>
                    </div>
                </div>

                <div class="meta">
                    <div class="meta-label">Secondary Moods</div>
                    <div class="meta-value">@Entry.SecondaryMoods</div>
                </div>

                <div class="meta">
                    <div class="meta-label">Tags</div>
                    <div class="meta-value tags">
                        @if (!string.IsNullOrWhiteSpace(Entry.Tags))
                        {
                            @foreach (var t in Entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                            {
                                <span class="tag">#@t.Trim()</span>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="divider"></div>

            <div class="content-head">
                <div class="content-title">Content (Markdown Text)</div>
                <div class="content-sub">Raw markdown stored for this entry.</div>
            </div>

            <pre class="content-box">@Entry.Content</pre>

            <div class="footer">
                <div class="foot-item">
                    <span class="foot-label">Created:</span>
                    <span class="mono">@Entry.CreatedAt</span>
                </div>
                <div class="foot-item">
                    <span class="foot-label">Updated:</span>
                    <span class="mono">@Entry.UpdatedAt</span>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* PAGE-ONLY STYLES (View Entry) */
    .view {
        max-width: 1100px;
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .view-top {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .links {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .back-link {
        text-decoration: none;
        font-size: 14px;
        opacity: 0.75;
    }

        .back-link:hover {
            opacity: 1;
        }

    .sep {
        opacity: 0.5;
    }

    .title {
        margin: 0;
        font-size: 26px;
        font-weight: 900;
    }

    .subtitle {
        margin: 6px 0 0 0;
        opacity: 0.75;
    }

    /* Message */
    .message {
        border: 1px solid rgba(0,0,0,0.12);
        border-radius: 16px;
        padding: 12px 14px;
        opacity: 0.9;
    }

    /* Card */
    .card {
        border: 1px solid rgba(0,0,0,0.10);
        border-radius: 18px;
        padding: 16px;
        background: rgba(0,0,0,0.01);
    }

    /* Meta grid */
    .meta-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }

    .meta {
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 16px;
        padding: 12px 12px;
        background: rgba(0,0,0,0.008);
    }

    .meta-label {
        font-size: 12px;
        font-weight: 850;
        opacity: 0.7;
        margin-bottom: 6px;
    }

    .meta-value {
        font-weight: 850;
        opacity: 0.95;
        word-break: break-word;
    }

    .mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    }

    /* Pills */
    .pill {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(0,0,0,0.12);
        font-size: 12px;
        font-weight: 850;
        opacity: 0.92;
        white-space: nowrap;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    .tag {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(0,0,0,0.12);
        font-size: 12px;
        opacity: 0.9;
        white-space: nowrap;
    }

    /* Divider */
    .divider {
        height: 1px;
        background: rgba(0,0,0,0.10);
        margin: 14px 0;
    }

    /* Content */
    .content-head {
        display: flex;
        flex-direction: column;
        gap: 4px;
        margin-bottom: 8px;
    }

    .content-title {
        font-weight: 900;
    }

    .content-sub {
        font-size: 12px;
        opacity: 0.7;
    }

    .content-box {
        white-space: pre-wrap;
        border: 1px solid rgba(0,0,0,0.10);
        border-radius: 16px;
        padding: 12px 14px;
        background: rgba(0,0,0,0.01);
        overflow: auto;
        min-height: 160px;
    }

    /* Footer */
    .footer {
        display: flex;
        gap: 12px;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-top: 14px;
        opacity: 0.85;
    }

    .foot-item {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .foot-label {
        font-size: 12px;
        font-weight: 850;
        opacity: 0.7;
    }

    

    /* If you want true responsive, tell me and I'll add @@media safely */
</style>
