@page "/settings/theme"
@namespace JournalApp.Components.Pages.Settings

<style>
    .theme-container {
        max-width: 650px;
        margin: 40px auto;
        padding: 0 24px;
        font-family: 'Inter', system-ui, sans-serif;
    }

    .theme-head {
        margin-bottom: 32px;
    }

        .theme-head h1 {
            font-size: 28px;
            font-weight: 900;
            color: var(--text-main);
            letter-spacing: -0.5px;
        }

        .theme-head p {
            color: var(--text-muted);
            font-size: 15px;
            margin-top: 4px;
            font-weight: 500;
        }

    /* Visual Grid */
    .theme-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }

    .theme-card {
        cursor: pointer;
        border: 2px solid var(--border);
        border-radius: 20px;
        padding: 16px;
        background: var(--surface);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

        .theme-card:hover {
            border-color: var(--accent);
            transform: translateY(-2px);
        }

        .theme-card.active {
            border-color: var(--accent);
            background: rgba(8, 145, 178, 0.03);
            box-shadow: 0 10px 20px -5px rgba(8, 145, 178, 0.15);
        }

    /* Abstract Previews */
    .preview {
        height: 100px;
        border-radius: 12px;
        margin-bottom: 16px;
        border: 1px solid rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 12px;
    }

    .p-line {
        height: 8px;
        border-radius: 4px;
    }

    .theme-label {
        font-weight: 800;
        font-size: 15px;
        text-align: center;
        display: block;
        color: var(--text-main);
    }

    /* Action Button */
    .save-btn {
        width: 100%;
        background: var(--text-main);
        color: white;
        border: none;
        padding: 16px;
        border-radius: 16px;
        font-weight: 800;
        font-size: 15px;
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

        .save-btn:hover {
            background: #000;
            transform: translateY(-1px);
        }

    .toast {
        margin-top: 20px;
        padding: 14px;
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        color: #15803d;
        border-radius: 12px;
        font-weight: 700;
        text-align: center;
        font-size: 14px;
    }
</style>

<div class="theme-container">
    <div class="theme-head">
        <h1>Appearance</h1>
        <p>Customize your journaling environment.</p>
    </div>

    <div class="theme-grid">
        <div class="theme-card @(tempTheme == "light" ? "active" : "")" @onclick='() => tempTheme = "light"'>
            <div class="preview" style="background: #ffffff;">
                <div class="p-line" style="background: #e2e8f0; width: 40%;"></div>
                <div class="p-line" style="background: #f1f5f9; width: 80%;"></div>
                <div class="p-line" style="background: #f1f5f9; width: 60%;"></div>
            </div>
            <span class="theme-label">🌤️ Light Mode</span>
        </div>

        <div class="theme-card @(tempTheme == "dark" ? "active" : "")" @onclick='() => tempTheme = "dark"'>
            <div class="preview" style="background: #0f172a;">
                <div class="p-line" style="background: #334155; width: 40%;"></div>
                <div class="p-line" style="background: #1e293b; width: 80%;"></div>
                <div class="p-line" style="background: #1e293b; width: 60%;"></div>
            </div>
            <span class="theme-label">🌙 Dark Mode</span>
        </div>
    </div>

    <button class="save-btn" @onclick="ApplyTheme">
        💾 Save Theme Preference
    </button>

    @if (showToast)
    {
        <div class="toast">✨ Theme settings saved successfully!</div>
    }
</div>

@code {
    private string tempTheme = "light";
    private bool showToast = false;

    private async Task ApplyTheme()
    {
        // Triggers JavaScript to change the <html> attribute
        await JS.InvokeVoidAsync("setTheme", tempTheme);
        showToast = true;
        StateHasChanged();
        await Task.Delay(3000);
        showToast = false;
        StateHasChanged();
    }
}